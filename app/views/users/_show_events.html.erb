<div class='new-event-outer'>
  <%= link_to "Create A New Event",  new_event_path, class: "new-event"%>
</div>
<h3 class='subheader'><span class='grey'>Your Upcoming Events</span></h3>
<div class='event-list'>

  <% if current_user.events.length >= 1 %>
  <table class='user-show'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Share Link</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.events.each do |event| %>
      <tr> <td> <%= link_to event.name.titleize, event_path(event) %></td><td> <%= event.date %></td>
        <td>www.toomanychips.com/<%= event.url %> </td> <td><%= link_to 'edit', edit_event_path(event)%>
        <%= link_to 'View Contributions', contributions_path(event)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%else%>

  <h3 class='subheader center'> <span class='grey'>You don't have any upcoming events.</span></h3>
  <% end %>

  <%= render 'guest'%>
 <h3 class="subheader"><span class='grey'>Your Past Events</span></h3>

 <div class='notifcations large-12 columns'>
   <h3 class="subheader center"><span class='grey'>You don't have any past events.</span></h3>
 </div>
