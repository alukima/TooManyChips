/ ko with: $root.guest   
.row
-if current_user.nil? 
  .large-12.columns{'class' => 'paddingT'}  
    .large-4.columns
      %label{"class" => "default_label"}
        Email
      %input{'data-bind' => 'text:email, type: text, value:email', 'class' => 'dark default_input'}
    .large-4.columns.left  
      %label{"class" => "default_label"}
        Name
      %input{'data-bind' => 'text:name, type: text, value:name', 'class' => 'dark default_input'}
    .large-4.columns
      %button{"class" => "left default_button", "type"=>"submit", "data-bind" => "click: $root.addGuest"}
        Save
-else
  .middle
    %button{"class" => "default_button middle", "type"=>"submit", "data-bind" => "click: $root.addGuest"}Save
