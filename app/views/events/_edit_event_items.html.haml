.row
  .large-10.columns{:id => 'items'}
    %table{"class" => "default_table"}
      %thead
        %tr 
          %th{width: "", "class" => "default_label"} Name
          %th{"class" => "default_label"} Description
          %th{"class" => "default_label"} Quanity Requested
      %tbody{"data-bind" =>"foreach: items"}
        %tr{"class" => "dark"}
          %td{"data-bind" => "text:name" }
          %td{"data-bind" => "text:description" }
          %td
            %input{'data-bind' => 'text:quantity, type: text, value: quantity', "class" => "default_input"}
  

